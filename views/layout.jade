	block head
		//- Add addition stylesheets, scripts, etc.
		
	body
		#topbar
			.container
				a(href="/")
					img(src="/images/lesson-unit.png")
		
		.container
			#main.container.col-md-11
				.wrapper
					block main
				
			#sidebar.container.col-md-1
				block sidebar
				
		.process(style="position: absolute; bottom: 20px; left: 40px;")
			.home-image
				a.ajax(href="/manual/process", data-title="Process ", data-nav="/manual/navigation")
					img.img-responsive(src="/images/teacher-bridge.png")
			p.home-text(style="position:relative; top: -100px; left: 85px") 
				a.ajax(href="/manual/process", data-title="Process", data-nav="/manual/navigation") Lesson Manual
				
		.languages(style="position: absolute; bottom: 0px; right: 0px;")
			.home-image
				a.ajax(href="/unit/languages", data-title="Languages")
					img.img-responsive(src="/images/languages.png", style="width:125px")
			p.home-text(style="padding-left:10px;") 
				a.ajax(href="/unit/languages", data-title="Languages") Languages

		#footer
			.container
		