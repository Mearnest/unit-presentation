	body
		#wrapper
			#header.container
				a(href="/")
					h1.title Bridge to Learning
							
			#navigation.container(style="display:block")
				block navigation
					nav.navbar.navbar-default(role='navigation')
						// Brand and toggle get grouped for better mobile display
						.navbar-header
							button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
								span.sr-only Toggle navigation
								span.icon-bar
								span.icon-bar
								span.icon-bar
							a.navbar-brand(href='#') Brand
							
						// Collect the nav links, forms, and other content for toggling
						#bs-example-navbar-collapse-1.collapse.navbar-collapse
							ul.button.nav.navbar-nav
								li
									a.ajax(class="large button red", href="/unit/simply-said", data-title="Simply Said") Simply Said
								li
									a.ajax(class="large button orange", href="/unit/text", data-title="Text") Text
								li
									a.ajax(class="large button yellow", href="/unit/classroom-example", data-title="Classroom Example") Classroom Example
								li
									a.ajax(class="large button green", href="/unit/review-exercises", data-title="Review Exercises") Review Exercises
								li
									a.ajax(class="large button blue", href="/unit/credits", data-title="Credits") Credits
								li
									a.ajax(class="large button purple", href="/unit/languages", data-title="Translations") Translations
					// /.navbar-collapse
						
			#main.container
				block main
					
		#footer
			.container
				.col-md-1
